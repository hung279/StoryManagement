    <div class="wrapper main-detail">
        <div class="row">
            <div class="col-sm-12 col-xs-12 col-md-4 col-lg-4 p-4">
                <img class="img-thumbnail rounded mx-auto d-block" src="./static/image/img_anime/<%= story.image %>"
